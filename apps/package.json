{
	"name": "superbloom-apps",
	"private": true,
	"workspaces": {
		"packages": [
			"nexus-core",
			"nexus",
			"nexus-mc-monitor",
			"nexus-agent-worker",
			"the-machine",
			"dashboard",
			"logger",
			"k8s",
			"mc-monitor"
		],
		"catalog": {
			"elysia": "1.4.17",
			"@elysiajs/eden": "1.4.5",
			"typescript": "5.7.3",
			"bun-types": "1.3.4",
			"@types/bun": "1.3.4",
			"@biomejs/biome": "2.3.8"
		}
	},
	"scripts": {
		"clean": "rm -rf node_modules */node_modules",
		"dev:api": "bun run --cwd nexus dev | jq 'del(.hostname, .level, .pid, .time)'",
		"dev:bot": "bun run --cwd the-machine dev | jq 'del(.hostname, .level, .pid, .time)'",
		"dev:dashboard": "bun run --cwd dashboard dev",
		"build": "bun run --filter '*' build",
		"typecheck": "bun run --filter '*' typecheck",
		"lint": "bun run --filter '*' lint",
		"lint:fix": "bun run --filter '*' lint:fix",
		"format": "bun run --filter '*' format",
		"check": "bun run --filter '*' check",
		"db:push": "bun run --cwd nexus db:push"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"lefthook": "^2.0.11"
	}
}
