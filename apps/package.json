{
	"name": "superbloom-apps",
	"private": true,
	"workspaces": {
		"packages": [
			"nexus",
			"the-machine",
			"dashboard",
			"logger"
		],
		"catalog": {
			"elysia": "1.4.17",
			"@elysiajs/eden": "1.4.5",
			"typescript": "5.7.3",
			"bun-types": "1.3.4",
			"@types/bun": "1.3.4"
		}
	},
	"scripts": {
		"clean": "rm -rf node_modules && rm -rf nexus/node_modules && rm -rf the-machine/node_modules && rm -rf dashboard/node_modules",
		"dev:bot": "bun run --cwd the-machine dev",
		"dev:api": "bun run --cwd nexus dev",
		"dev:dashboard": "bun run --cwd dashboard dev",
		"build:bot": "bun run --cwd the-machine build",
		"build:api": "bun run --cwd nexus build",
		"build:dashboard": "bun run --cwd dashboard build",
		"typecheck": "bun run typecheck:bot && bun run typecheck:api && bun run typecheck:dashboard",
		"typecheck:bot": "bun run --cwd the-machine typecheck",
		"typecheck:api": "bun run --cwd nexus typecheck",
		"typecheck:dashboard": "bun run --cwd dashboard tsc --noEmit",
		"lint:bot": "bun run --cwd the-machine lint",
		"lint:api": "bun run --cwd nexus lint",
		"lint:dashboard": "bun run --cwd dashboard lint",
		"lint:bot:fix": "bun run --cwd the-machine lint:fix",
		"lint:api:fix": "bun run --cwd nexus lint:fix",
		"lint:dashboard:fix": "bun run --cwd dashboard lint:fix",
		"format:bot": "bun run --cwd the-machine format",
		"format:api": "bun run --cwd nexus format",
		"format:dashboard": "bun run --cwd dashboard format",
		"db:push": "bun run --cwd nexus db:push"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8"
	}
}
