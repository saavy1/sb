{
	"name": "nexus",
	"version": "1.0.0",
	"scripts": {
		"dev": "bun run --watch src/index.ts | jq 'del(.hostname, .level, .pid, .time)'",
		"dev:api": "MODE=api bun run --watch src/index.ts | jq 'del(.hostname, .level, .pid, .time)'",
		"dev:worker": "MODE=worker bun run --watch src/index.ts | jq 'del(.hostname, .level, .pid, .time)'",
		"start": "bun run src/index.ts",
		"start:api": "MODE=api bun run src/index.ts",
		"start:worker": "MODE=worker bun run src/index.ts",
		"build": "bun build src/index.ts --outdir=dist --target=bun",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"db:generate:agent": "drizzle-kit generate --config=./drizzle/agent/drizzle.config.ts",
		"db:generate:apps": "drizzle-kit generate --config=./drizzle/apps-pg/drizzle.config.ts",
		"db:generate:core": "drizzle-kit generate --config=./drizzle/core-pg/drizzle.config.ts",
		"db:generate:game-servers": "drizzle-kit generate --config=./drizzle/game-servers-pg/drizzle.config.ts",
		"db:generate:ops": "drizzle-kit generate --config=./drizzle/ops-pg/drizzle.config.ts",
		"db:generate:system-info": "drizzle-kit generate --config=./drizzle/system-info-pg/drizzle.config.ts",
		"db:generate": "bun run db:generate:agent && bun run db:generate:apps && bun run db:generate:core && bun run db:generate:game-servers && bun run db:generate:ops && bun run db:generate:system-info",
		"db:migrate": "bun run src/infra/migrate.ts"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/opentelemetry": "^1.4.9",
		"@elysiajs/static": "^1.1.1",
		"@kubernetes/client-node": "^1.4.0",
		"@tanstack/ai": "^0.0.3",
		"@tanstack/ai-openai": "^0.0.3",
		"bullmq": "^5.66.0",
		"drizzle-orm": "^0.45.1",
		"elysia": "catalog:",
		"ioredis": "^5.8.2",
		"logger": "workspace:*",
		"postgres": "^3.4.7",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"bun-types": "catalog:",
		"drizzle-kit": "^0.31.8",
		"typescript": "catalog:"
	},
	"module": "src/index.ts"
}
