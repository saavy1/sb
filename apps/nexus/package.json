{
	"name": "nexus",
	"version": "1.0.0",
	"scripts": {
		"dev": "bun run --watch src/index.ts | jq 'del(.hostname, .level, .pid, .time)'",
		"start": "bun run src/index.ts",
		"build": "bun build src/index.ts --outdir=dist --target=bun",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"db:generate:minecraft": "drizzle-kit generate --dialect=sqlite --schema=./src/domains/game-servers/schema.ts --out=./db/migrations/minecraft",
		"db:generate:core": "drizzle-kit generate --dialect=sqlite --schema=./src/domains/core/schema.ts --out=./db/migrations/core",
		"db:generate": "bun run db:generate:minecraft && bun run db:generate:core",
		"db:migrate": "bun run src/infra/migrate.ts",
		"db:push": "bun run src/infra/db-push.ts"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/opentelemetry": "^1.4.9",
		"@elysiajs/static": "^1.1.1",
		"@kubernetes/client-node": "^1.4.0",
		"@tanstack/ai": "^0.0.3",
		"@tanstack/ai-openai": "^0.0.3",
		"drizzle-orm": "^0.45.1",
		"elysia": "catalog:",
		"logger": "workspace:*",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"bun-types": "catalog:",
		"drizzle-kit": "^0.31.8",
		"typescript": "catalog:"
	},
	"module": "src/index.ts"
}
