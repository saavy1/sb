{
	"name": "@nexus/api",
	"version": "1.0.0",
	"scripts": {
		"dev": "bun --env-file=../../.env run --watch src/index.ts | jq 'del(.hostname, .level, .pid, .time)'",
		"start": "bun --env-file=../../.env run src/index.ts",
		"build": "bun build src/index.ts --outdir=dist --target=bun",
		"docker:build": "docker build -f Dockerfile -t nexus-api:latest ../..",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check ."
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/opentelemetry": "^1.4.9",
		"@elysiajs/static": "^1.1.1",
		"@nexus/core": "workspace:*",
		"@nexus/logger": "workspace:*",
		"bullmq": "catalog:",
		"elysia": "catalog:"
	},
	"devDependencies": {
		"bun-types": "catalog:",
		"typescript": "catalog:"
	},
	"module": "src/index.ts"
}
