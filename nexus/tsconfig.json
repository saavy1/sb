{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@nexus/core/*": ["./packages/core/src/*"],
			"@nexus/logger": ["./packages/logger/index.ts"],
			"@nexus/k8s": ["./packages/k8s/src/index.ts"],
			"@nexus/mc-monitor": ["./packages/mc-monitor/src/index.ts"]
		}
	}
}
