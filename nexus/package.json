{
	"name": "nexus",
	"private": true,
	"packageManager": "bun@1.3.3",
	"workspaces": {
		"packages": [
			"packages/*",
			"apps/*",
			"workers/*"
		],
		"catalog": {
			"elysia": "1.4.17",
			"@elysiajs/eden": "1.4.5",
			"typescript": "5.7.3",
			"bun-types": "1.3.4",
			"@types/bun": "1.3.4",
			"@biomejs/biome": "2.3.8"
		}
	},
	"scripts": {
		"clean": "rm -rf node_modules */*/node_modules",
		"dev:all": "turbo dev --ui tui",
		"dev:api": "turbo dev --filter=@nexus/api",
		"dev:ui": "turbo dev --filter=@nexus/ui",
		"dev:bot": "turbo dev --filter=@nexus/bot",
		"dev:workers": "turbo dev --filter='@nexus/worker-*'",
		"build": "turbo run build",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"format": "turbo run format",
		"check": "turbo run check",
		"check:fix": "bun run check --fix --write",
		"db:generate": "bun run --cwd packages/core db:generate",
		"db:migrate": "bun run --cwd packages/core db:migrate",
		"docker:build:all": "turbo run docker:build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"lefthook": "^2.0.11",
		"turbo": "^2.6.3"
	}
}
